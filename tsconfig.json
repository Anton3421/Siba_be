{
  "compilerOptions": {
      "target": "ESNEXT",
      "module": "ESNEXT",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowJs": true,
      "checkJs": true,
      // "noImplicitAny": true
  },
  "include": [
      "db/**/*",
      "responseHandler/**/*",
      "routes/**/*",
      "services/**/*",
      "utils/**/*",
      "validationHandler/**/*",
      "index.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}